<?xml version="1.0"?>
<robot name="brick">
    <link name="base">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.1"/>  <!-- Length, Width, Height -->
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>  <!-- Red color -->
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.2 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01"/>
            <origin xyz="0 0 0"/>
        </inertial>
    </link>
</robot>

